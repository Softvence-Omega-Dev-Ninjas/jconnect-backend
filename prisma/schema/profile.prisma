model Profile {
  user_id           String   @id @unique
  user              User     @relation(fields: [user_id], references: [id] ,onDelete: Cascade)
  profile_image_url String?
  short_bio         String?
  instagram         String?
  facebook          String?
  tiktok            String?
  youtube           String?
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt

  @@map("user_profiles")
}
